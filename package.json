{
	"name": "distinct-monorepo",
	"scripts": {
		"build:all": "turbo run build",
		"build:packages": "bun run --cwd packages/** build",
		"build:docs": "bun run --cwd docs build",
		"build:examples": "bun run --cwd examples/** build",
		"dev": "turbo run dev",
		"dev:package": "bun run --cwd packages/** dev",
		"dev:docs": "bun run --cwd docs dev",
		"dev:examples": "bun run --cwd examples/** dev",
		"test": "bun run --cwd packages/** test",
		"biome": "biome check .",
		"biome:fix": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/bun": "^1.3.5",
		"turbo": "^2.7.3"
	},
	"workspaces": [
		"docs",
		"packages/**"
	],
	"packageManager": "bun@1.3.4"
}
